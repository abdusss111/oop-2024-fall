package problem2;

public class King extends Piece {
	public King(Position a, Color color) {
		super(a, color);
	}
	@Override
	public boolean isLegalMove(Position b) {
		boolean isDifEqualsOne = Math.abs(this.columnDifference(b)) == 1 || Math.abs(this.rowDifference(b)) == 1;
		if(Math.abs(this.columnDifference(b)) > 1 || Math.abs(this.rowDifference(b)) > 1)
		if() return true;
		return false;
	}

}

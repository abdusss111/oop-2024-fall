package lab2;

public class Sphere {
	private double radius;
	
	public Sphere(double radius) {
		this.radius = radius;
	}
	
	public double volume(double radius) {
		return 4/3 * Math.PI * radius * radius * radius ;
	}

	public double getRadius() {
		return radius;
	}

	public void setRadius(double radius) {
		this.radius = radius;
	} 
}

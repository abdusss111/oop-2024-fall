package problem2;

public class Knight extends Piece {

	public Knight(Position a, Color color) {
		super(a, color);
	}
	
	@Override
	public boolean isLegalMove(Position b) {
		if((this.columnDifference(b) == 2 && this.rowDifference(b) == 1) || (this.columnDifference(b) == 1 && this.rowDifference(b) == 2));
		return false;
	}

}
